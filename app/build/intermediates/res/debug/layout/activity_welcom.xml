<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:id="@+id/welcome"
    android:layout_height="fill_parent"
    android:background="@drawable/background_img"
    tools:context=".WelcomeActivity" >

    <ScrollView
        android:id="@+id/scrool"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            tools:context=".WelcomeActivity" >

            <RelativeLayout
                android:id="@+id/rltv_topBar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#474C52" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="10dp"
                    android:text="@string/Sign_In"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/title_text"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lnr_middle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rltv_topBar"
                android:layout_centerInParent="true"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"
                     android:textColor="#000000"
                    android:text="@string/welcome"
                    android:textSize="@dimen/welcome" />

                <ImageView
                    android:id="@+id/Image_welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="#000000"
                    android:text="@string/welcome_text"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-10dp"
                     android:textColor="#000000"
                    android:text="@string/welcome_text2"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr_buttom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lnr_middle"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_signIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/signin_btn_selector" />

                <Button
                    android:id="@+id/btn_buyID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/buy_id_btn_selector" />
                
                <TextView 
                    android:id="@+id/txt_havePincode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:textColor="#0000ff"
                    android:textStyle="italic|bold"
                    android:textSize="20dp"
                    android:visibility="gone"
                    android:text="Do You Have A Promotional Code?" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout><!-- From: file:/D:/StudioWorkSpace/That's%20It%20SVN/app/src/main/res/layout/activity_welcom.xml -->