<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >
	<ImageView
		android:id="@+id/imgParticipant"
		android:layout_width="80dp"
		android:layout_height="80dp"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="0dp"
		android:layout_marginTop="0dp"
		android:src="@drawable/no_img" />
	<TextView
		android:id="@+id/textViewParticipantName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@+id/imgParticipant"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="5dp"
		android:singleLine="true"
		android:layout_toRightOf="@+id/imgParticipant"
		android:layout_toLeftOf="@+id/textViewParticipantTime"
		android:text="Name"
		android:textAppearance="?android:attr/textAppearanceMedium" />
	<TextView
		android:id="@+id/textViewParticipantLastMsg"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/textViewParticipantName"
		android:layout_below="@+id/textViewParticipantName"
		android:layout_marginTop="15dp"
		android:text="last chat" />
	<TextView
		android:id="@+id/textViewParticipantTime"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignTop="@+id/textViewParticipantName"
		android:text="time" />
</RelativeLayout><!-- From: file:/D:/StudioWorkSpace/That's%20It%20SVN/app/src/main/res/layout-sw600dp/row_chat_roster.xml -->