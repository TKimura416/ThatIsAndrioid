<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_img">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/createPass_header_rellayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#474C52" >

        <TextView
            android:id="@+id/createPass_relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:text="Change Password"
            android:textColor="#ffffff"
            android:textSize="@dimen/title_text_720_portrait"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/createPass_enterPwd_rellayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp" >

        <EditText
            android:id="@+id/edt_enterOldPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/enter_password_img"
            android:ems="10"
            android:hint="@string/edittext_hint_old_login_password"
            android:inputType="textPassword"
            android:longClickable="false"
            android:maxLength="15"
            android:paddingLeft="70dp"
            android:singleLine="true"
            android:textSize="@dimen/edit_text_hints_720_portrait" />

        <EditText
            android:id="@+id/edt_enterNewPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_enterOldPwd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:longClickable="false"
            android:background="@drawable/enter_password_img"
            android:ems="10"
            android:hint="@string/edittext_hint_new_login_password"
            android:inputType="textPassword"
            android:maxLength="15"
            android:paddingLeft="70dp"
            android:singleLine="true"
            android:textSize="@dimen/edit_text_hints_720_portrait" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/createPass_confirmPwd_rellayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp" >

        <EditText
            android:id="@+id/edt_confirmNewPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/confirm_password_img"
            android:ems="10"
            android:longClickable="false"
            android:hint="@string/edittext_hint_Confirm_new_login_password"
            android:inputType="textPassword"
            android:maxLength="15"
            android:paddingLeft="70dp"
            android:singleLine="true"
            android:textSize="@dimen/edit_text_hints_720_portrait"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/createPass_submitBtn_rellayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp" >

        <Button
            android:id="@+id/createPass_btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/submit_btn_selector" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/createPass_message_rellayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp" >

        <TextView
            android:id="@+id/createPass_txtview_message1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/this_passwrd"
            android:textSize="@dimen/normal_text_720_portrait" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/createPass_message2_rellayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/createPass_txtview_message2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/user_need"
            android:textSize="@dimen/normal_text_720_portrait" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/createPass_message3_rellayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/createPass_txtview_message3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/unlock"
            android:textSize="@dimen/normal_text_720_portrait" />
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>
</LinearLayout>
</ScrollView><!-- From: file:/D:/StudioWorkSpace/That's%20It%20SVN/app/src/main/res/layout-sw600dp/activity_change_login_password_screen.xml -->